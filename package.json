{
  "name": "kanban-task-management",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "commit": "git-cz",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "dev": "next dev",
    "lint": "bunx @biomejs/biome check --write .",
    "preinstall": "npx only-allow bun",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "start": "cp -r \"./public\" \".next/standalone/public\" && cp -r \".next/static\" \".next/standalone/.next/static\" && bun --bun run \".next/standalone/server.js\"",
    "test": "dotenv -e .env -- vitest run --passWithNoTests",
    "test:watch": "dotenv -e .env -- vitest --passWithNoTests"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "@prisma/client": "5.15.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "gql.tada": "^1.7.5",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.3.1",
    "lucide-react": "^0.383.0",
    "next": "^14.2.1",
    "next-themes": "^0.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sonner": "^1.4.41",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.5",
    "@biomejs/biome": "^1.8.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/types": "^19.0.3",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@parcel/watcher": "^2.4.1",
    "@swc/core": "^1.5.25",
    "@tanstack/react-query-devtools": "^5.40.1",
    "@types/bun": "^1.1.3",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@vitest/coverage-v8": "^1.6.0",
    "commitizen": "^4.3.0",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.0.11",
    "inquirer": "^9.2.23",
    "lint-staged": "^15.2.5",
    "postcss": "^8.4.34",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.2",
    "unplugin-swc": "^1.4.5",
    "vitest": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "bun": ">=1.1.12",
    "node": ">=20.14.0",
    "npm": "please-use-bun",
    "pnpm": "please-use-bun",
    "yarn": "please-use-bun"
  }
}
